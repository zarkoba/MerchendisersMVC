@using (Html.BeginForm("Create", "Town"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UNOS GRADA</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Naziv grada:", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBox("TownName", "", new { @class = "form-control" } )
                    @Html.ValidationMessage("TownName", new { @class ="text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Dodaj grad" class="btn btn-primary" />
                @Html.ActionLink("Odustani", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
