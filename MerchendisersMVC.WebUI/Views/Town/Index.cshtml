@model MerchendisersMVC.Domain.Models.Town

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    @Html.Action("RenderTownList")
</div>

<div class="row">
    <div class="col-md-6">
        <div id="addTownForm">
            <div class="text-center">
                @Ajax.ActionLink("Dodavanje grada u evidenciju", "AddTown", new { }, new AjaxOptions { UpdateTargetId = "addTownForm", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div id="updateTownForm">
            <div class="text-center">
                @Ajax.ActionLink("Izmena naziva grada", "UpdateTown", new { }, new AjaxOptions { UpdateTargetId = "updateTownForm", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

@section scripts{    
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
